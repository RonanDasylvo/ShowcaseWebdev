@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Showcase.Attributes
@{
    ViewData["Title"] = "Contact";
    UserModel? userSession = Context.Session.GetObjectFromJson<UserModel>("LoggedInUser");

}

<div class="content h-full border-box px-8 flex flex-col items-center">

    <section class="p-12 text-center">
        <h1>Neem contact op!</h1>
        <p>
            Hallo! Ik ben Ronan van der Vlies. Als je contact met mij wilt opnemen kan je dat doen door dit formulier in te vullen en te verzenden.
        </p>
    </section>

    <section class="flex flex-col w-4/5 md:max-w-[800px]">
        <form
            id="contact-form"
            class="form flex flex-col [&>label]:my-1 [&>textarea]:h-40 [&>textarea]:resize-none"
            method="post">

            <div class="flex flex-col lg:flex-row lg:gap-8">
                <div class="flex flex-col w-full lg:w-1/2">
                    <label for="email">Email</label>
                    <input id="email" class="h-8 mb-5" name="email" type="text" value="@userSession?.Email" required>
                </div>

                <div class="flex flex-col w-full lg:w-1/2">
                    <label for="subject">Onderwerp</label>
                    <input id="subject" class="h-8 mb-5" name="subject" type="text" maxlength="200" required>
                </div>
            </div>

            <label for="content">Inhoud</label>
            <textarea id="content" class="mb-5" name="content" type="text" maxlength="600" required></textarea>

            <div class="flex flex-col self-start">
                <label for="captcha">Beantwoord deze som: 2 + 7</label>
                <input id="captcha" class="mb-5" name="captcha" pattern="[0-9]+" maxlength="9" type="text" required>
            </div>

            <div class="flex flex-row items-center gap-8 mb-4">
                <input id="submit" class="self-start btn bg-green-400 hover:bg-green-500" type="submit" value="Verzenden">
                <p id="val-msg"></p>
            </div>
        </form>

    </section>

</div>