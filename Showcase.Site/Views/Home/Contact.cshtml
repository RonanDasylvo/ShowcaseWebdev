@{
    ViewData["Title"] = "Contact";
}

<div class="content h-full border-box px-8 flex flex-col items-center">

    <section class="p-12 text-center">
        <h1>Neem contact op!</h1>
        <p>
            Hallo! Ik ben Ronan van der Vlies. Als je contact met mij wilt opnemen kan je dat doen door dit formulier in te vullen en te verzenden.
        </p>
    </section>

    <section class="flex flex-col w-4/5 md:max-w-[800px]">
        <form
            id="form"
            class="form flex flex-col [&>label]:my-1 [&>textarea]:h-40 [&>textarea]:resize-none"
            method="post">

            <label for="email">Email</label>
            <input id="email" class="h-8" name="email" type="email" required>

            <label for="subject">Onderwerp</label>
            <input id="subject" class="h-8" name="subject" type="text" maxlength="200" required>

            <label for="content">Inhoud</label>
            <textarea id="content" class="" name="content" type="text" maxlength="600" required></textarea>

            <input id="submit" class="self-center btn bg-green-400 hover:bg-green-500" type="submit" value="Verzenden">
        </form>

    </section>

</div>